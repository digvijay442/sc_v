<% include partials/header %>
<% include partials/defnavbar %>


    <div class="container">
    
        <div class="personalDetails">
            <form class="form-horizontal">
                    <div class="form-group">
                            <label class="control-label col-sm-2" for="name">Name:</label>
                            <div class="col-sm-10">
                              <input type="text" class="form-control" id="name" placeholder="Enter name" name="name" required='true' autofocus>
                            </div>
                    </div> 
                    <div class="form-group">
                            <label class="control-label col-sm-2" for="email">Email:</label>
                            <div class="col-sm-10">
                              <input type="email" class="form-control" id="email" placeholder="Enter email" name="email" required=''>
                            </div>
                    </div>
                    <div class="form-group">
                            <label class="control-label col-sm-2" for="contact">Phone Number:</label>
                            <div class="col-sm-10">
                              <input type="number" class="form-control" id="contact" placeholder="Enter Phone Nmber" name="contact" required=''>
                            </div>
                    </div>
                    <div class="form-group">        
                        <div class="col-sm-offset-2 col-sm-10">
                            <button type="button" id="pdBtn" class="btn btn-primary">Continue</button>
                        </div>
                    </div>
            </form>
        </div>
<!--  Address Column -->

            <div class="delAddress" hidden>
                    <form class="form-horizontal">
                            <div class="form-group">
                                <label class="control-label col-sm-2" for="name">Address:</label>
                                <div class="col-sm-10">
                                    <input type="text" class="form-control" id="address" placeholder="Enter address" name="address" required=''>
                                </div>
                            </div> 
                            <div class="form-group">
                                <label class="control-label col-sm-2" for="email">Pincode:</label>
                                <div class="col-sm-10">
                                    <input type="text" class="form-control" id="pin" placeholder="Pincode" name="pin" required=''>
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="control-label col-sm-2" for="contact">City:</label>
                                <div class="col-sm-10">
                                    <input type="text" class="form-control" id="contact" placeholder="Enter City" name="city" required=''>
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="control-label col-sm-2" for="contact">State:</label>
                                <div class="col-sm-10">
                                    <input type="text" class="form-control" id="state" placeholder="Enter State" name="state" required=''>
                                </div>
                            </div>
                            <div class="form-group">        
                                <div class="col-sm-offset-2 col-sm-10">
                                    <button type="button" id="delAddBtn" class="btn btn-primary">Continue</button>
                                </div>
                            </div>
                            
                    </form>
            </div>

    <!-- orderdetails form -->

    <div class='orderDetrailsDiv' hidden>
                    <% if(orderDetails.length > 0 && orderDetails.length != undefined){ %>

                        <table id="cart" class="table table-hover table-condensed">
                                <thead>
                                    <tr>
                                        <th style="width:50%">Product</th>
                                        <th style="width:10%">Price</th>
                                        <th style="width:8%">Quantity</th>
                                        <th style="width:22%" class="text-center">Subtotal</th>
                                        <!-- <th style="width:10%"></th> -->
                                    </tr>
                                </thead>

                            <% var total = 0; %>
                            <% orderDetails.forEach(el => { %>
                            <% total += el.sub_total; %>
                        
                            
                                <tbody>
                                    <tr>
                                        <td data-th="Product">
                                            <div class="row">
                                                <div class="col-sm-2 "><img src="<%= el.imgsrc %>" alt="..." class="img-responsive"/></div>
                                                <div class="col-sm-10">
                                                    <h4 class="nomargin"> <%= el.name %> </h4>
                                                    <!--<p>Quis aute iure reprehenderit in voluptate velit esse cillum dolore eu fugiat nulla pariatur. Lorem ipsum dolor sit amet.</p> -->
                                                </div>
                                            </div>
                                        </td>
                                        <td data-th="Price">Rs. <%= el.price %></td>
                                        <td data-th="Quantity">
                                            <input type="number" class="form-control text-center" value="<%= el.quantity %>">
                                        </td>
                                        <td data-th="Subtotal" class="text-center"><%= el.sub_total %></td>
                                    </tr>
                                </tbody>


                        <% }) %> <!-- foreach ends here-->

                                <tfoot>
                                    <tr>
                                        <td colspan="3" class=""></td>
                                        <td class="text-center"><strong>Total Rs. <%= total %></strong></td>
                                    </tr>
                                    <tr>
                                        <td colspan="3"><!-- <a href="/" class="btn btn-warning">  Continue Shopping </a> --> </td>
                                        <td class="text-center"><button class="btn btn-success" id="placeOrdBtn">Place Order</button></td>
                                    </tr>
                                </tfoot>
                            </table>


                    <% } %> <!-- if ends here-->
    </div>

<!-- payment details form -->

        <div class='paymentDiv' hidden>
            <form>
                <div class="radio">
                <label><input type="radio" name="optradio">Credit Card</label>
                </div>
                <div class="radio">
                <label><input type="radio" name="optradio">Net Banking</label>
                </div>
                <div class="radio">
                <label><input type="radio" name="optradio">Cash on Delivery</label>
                </div>
                <div class="form-group">
                    <label><input type="submit" name="submit" class="btn btn-primary" value='Comfirm Order'></label>
                </div>
            </form>
        </div>

</div>


<% include partials/footer %>
