<% include partials/header%>
<% include partials/defnavbar%>

<div class="container">

<% if(orderDetails.length){ %>

<table id="cart" class="table table-hover table-condensed">
        <thead>
            <tr>
                <th style="width:50%">Product</th>
                <th style="width:10%">Price</th>
                <th style="width:8%">Quantity</th>
                <th style="width:22%" class="text-center">Subtotal</th>
                <!-- <th style="width:10%"></th> -->
            </tr>
        </thead>

    <% var total = 0; %>
    <% orderDetails.forEach(el => { %>
    <% total += el.sub_total; %>
  
	
        <tbody>
            <tr>
                <td data-th="Product">
                    <div class="row">
                        <div class="col-sm-2 "><img src="<%= el.imgsrc %>" alt="..." class="img-responsive"/></div>
                        <div class="col-sm-10">
                            <h4 class="nomargin"> <%= el.name %> </h4>
                            <!--<p>Quis aute iure reprehenderit in voluptate velit esse cillum dolore eu fugiat nulla pariatur. Lorem ipsum dolor sit amet.</p> -->
                        </div>
                    </div>
                </td>
                <td data-th="Price">Rs. <%= el.price %></td>
                <td data-th="Quantity">
                    <input type="number" class="form-control text-center" value="<%= el.quantity %>">
                </td>
                <td data-th="Subtotal" class="text-center"><%= el.sub_total %></td>
            </tr>
        </tbody>


<% }) %> <!-- foreach ends here-->

        <tfoot>
            <tr>
                <td colspan="3" class=""></td>
                <td class="text-center"><strong>Total Rs. <%= total %></strong></td>
            </tr>
            <tr>
                <td colspan="3"><!-- <a href="/" class="btn btn-warning">  Continue Shopping </a> --> </td>
                <td class="text-center"><a href="/checkout" class="btn btn-success">Check out</a></td>
            </tr>
        </tfoot>
	</table>


<% } %> <!-- if ends here-->


</div>


<% include partials/footer%>
